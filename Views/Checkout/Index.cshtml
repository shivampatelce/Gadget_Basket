@model CheckoutViewModel

@{
    ViewBag.Title = "Checkout";
    Layout = "_Layout";
}

<div class="bg-light py-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="display-6 fw-bold text-dark mb-0">Checkout</h1>
                <p class="text-muted mb-0">Complete your order securely</p>
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="row mb-4">
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <div class="badge bg-primary rounded-circle me-3" style="width: 30px; height: 30px; display: flex; align-items: center; justify-content: center;">
                                <small class="fw-bold">1</small>
                            </div>
                            <span class="fw-semibold">Billing & Payment</span>
                        </div>
                        <div class="d-flex align-items-center text-muted">
                            <div class="badge bg-light text-muted rounded-circle me-3" style="width: 30px; height: 30px; display: flex; align-items: center; justify-content: center;">
                                <small>2</small>
                            </div>
                            <span class="small">Order Confirmation</span>
                        </div>
                    </div>
                    <hr class="my-4">
                </div>
            </div>

            <form asp-action="Index" method="post" class="needs-validation" novalidate>
                <div class="row g-4">
                    <div class="col-lg-8">
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-white border-0 py-4">
                                <h4 class="fw-semibold mb-0">
                                    <i class="fas fa-user me-2 text-primary"></i>
                                    Billing Information
                                </h4>
                            </div>
                            <div class="card-body p-4">
                                <div class="row g-3">
                                    <div class="col-12">
                                        <label asp-for="FullName" class="form-label fw-semibold">Full Name</label>
                                        <input asp-for="FullName" class="form-control form-control-lg" placeholder="Enter your full name" />
                                        <span asp-validation-for="FullName" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="Email" class="form-label fw-semibold">Email Address</label>
                                        <input asp-for="Email" class="form-control form-control-lg" placeholder="your@email.com" />
                                        <span asp-validation-for="Email" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="Phone" class="form-label fw-semibold">Phone Number</label>
                                        <input asp-for="Phone" class="form-control form-control-lg" placeholder="(555) 123-4567" />
                                        <span asp-validation-for="Phone" class="text-danger small"></span>
                                    </div>

                                    <div class="col-12">
                                        <label asp-for="Address" class="form-label fw-semibold">Street Address</label>
                                        <input asp-for="Address" class="form-control form-control-lg" placeholder="123 Main Street" />
                                        <span asp-validation-for="Address" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-8">
                                        <label asp-for="City" class="form-label fw-semibold">City</label>
                                        <input asp-for="City" class="form-control form-control-lg" placeholder="City name" />
                                        <span asp-validation-for="City" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-4">
                                        <label asp-for="PostalCode" class="form-label fw-semibold">Postal Code</label>
                                        <input asp-for="PostalCode" class="form-control form-control-lg" placeholder="A1A 1A1" />
                                        <span asp-validation-for="PostalCode" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-white border-0 py-4">
                                <h4 class="fw-semibold mb-0">
                                    <i class="fas fa-credit-card me-2 text-primary"></i>
                                    Payment Information
                                </h4>
                                <small class="text-muted">Your payment information is secure and encrypted</small>
                            </div>
                            <div class="card-body p-4">
                                <div class="row g-3">
                                    <div class="col-12">
                                        <label asp-for="CardNumber" class="form-label fw-semibold">Card Number</label>
                                        <div class="input-group input-group-lg">
                                            <input asp-for="CardNumber" class="form-control" placeholder="1234 5678 9012 3456" />
                                            <span class="input-group-text bg-light">
                                                <i class="fab fa-cc-visa text-primary me-1"></i>
                                                <i class="fab fa-cc-mastercard text-warning me-1"></i>
                                                <i class="fab fa-cc-amex text-info"></i>
                                            </span>
                                        </div>
                                        <span asp-validation-for="CardNumber" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="ExpiryDate" class="form-label fw-semibold">Expiry Date</label>
                                        <input asp-for="ExpiryDate" class="form-control form-control-lg" placeholder="MM/YY" />
                                        <span asp-validation-for="ExpiryDate" class="text-danger small"></span>
                                    </div>

                                    <div class="col-md-6">
                                        <label asp-for="CVV" class="form-label fw-semibold">CVV</label>
                                        <input asp-for="CVV" class="form-control form-control-lg" placeholder="123" />
                                        <span asp-validation-for="CVV" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-4">
                        <div class="position-sticky" style="top: 2rem;">
                            <div class="card border-0 shadow-sm">
                                <div class="card-header bg-primary text-white py-4">
                                    <h5 class="fw-semibold mb-0">
                                        <i class="fas fa-shopping-bag me-2"></i>
                                        Order Summary
                                    </h5>
                                </div>
                                <div class="card-body p-4">
                                    <div class="d-flex justify-content-between py-2 border-bottom">
                                        <span class="text-muted">Subtotal</span>
                                        <span class="fw-semibold">$299.99</span>
                                    </div>
                                    <div class="d-flex justify-content-between py-2 border-bottom">
                                        <span class="text-muted">Shipping</span>
                                        <span class="fw-semibold text-success">FREE</span>
                                    </div>
                                    <div class="d-flex justify-content-between py-2 border-bottom">
                                        <span class="text-muted">Tax (13%)</span>
                                        <span class="fw-semibold">$38.99</span>
                                    </div>
                                    <div class="d-flex justify-content-between py-3 border-bottom mb-3">
                                        <span class="h5 fw-bold mb-0">Total</span>
                                        <span class="h5 fw-bold text-primary mb-0">$338.98</span>
                                    </div>
                                    
                                    <button type="submit" class="btn btn-success btn-lg w-100 rounded-pill fw-semibold mb-3">
                                        <i class="fas fa-lock me-2"></i>Place Order
                                    </button>
                                </div>
                            </div>

                            <div class="card border-0 shadow-sm my-4">
                                <div class="card-body p-4">
                                    <h6 class="fw-semibold mb-3">
                                        <i class="fas fa-truck me-2 text-primary"></i>
                                        Shipping Information
                                    </h6>
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fas fa-check-circle text-success me-2"></i>
                                        <small class="text-muted">Free standard shipping</small>
                                    </div>
                                    <div class="d-flex align-items-center mb-2">
                                        <i class="fas fa-check-circle text-success me-2"></i>
                                        <small class="text-muted">5-7 business days delivery</small>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-check-circle text-success me-2"></i>
                                        <small class="text-muted">30-day return policy</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}