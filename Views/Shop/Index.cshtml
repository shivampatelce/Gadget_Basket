@model List<CategoryProductsViewModel>

@{
    ViewBag.Title = "Shop";
    Layout = "_Layout";
}

<div class="bg-light py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="text-center mb-4">
                    <h1 class="display-4 fw-bold text-dark mb-3">Discover Our Products</h1>
                    <p class="lead text-muted">Find exactly what you're looking for</p>
                </div>
                
                <form asp-action="ProductList" method="get">
                    <div class="input-group input-group-lg shadow-sm">
                        <input type="text" name="query" class="form-control ps-4" 
                               placeholder="Search for products, brands, categories..." />
                        <button type="submit" class="btn btn-primary px-4">
                            Search
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    @foreach (var categoryGroup in Model)
    {
        <section class="mb-5 pb-5 border-bottom">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="fw-bold text-dark mb-1">@categoryGroup.Category.CategoryName</h2>
                    <p class="text-muted mb-0">Explore our @categoryGroup.Category.CategoryName collection</p>
                </div>
                <a asp-action="ProductList" asp-route-categoryName="@categoryGroup.Category.CategoryName" 
                   class="btn btn-outline-dark btn-sm rounded-pill px-4">
                    View All
                </a>
            </div>
            
            <div class="row g-4">
                @foreach (var product in categoryGroup.Products)
                {
                    <div class="col-xl-3 col-lg-4 col-md-6">
                        <div class="card border-0 shadow-sm h-100 position-relative">
                            @if (product.Discount > 0)
                            {
                                <span class="position-absolute top-0 start-0 badge bg-danger m-2" style="z-index: 10;">
                                    @product.Discount.ToString("0")% OFF
                                </span>
                            }
                            
                            <div class="overflow-hidden">
                                <img src="@product.ImageURL" 
                                     class="card-img-top" 
                                     alt="@product.ProductName" 
                                     style="height: 220px; object-fit: cover;" />
                            </div>
                            
                            <div class="card-body d-flex flex-column p-4">
                                <h5 class="card-title fw-bold text-dark mb-2">@product.ProductName</h5>
                                <p class="card-text text-muted small mb-3 text-truncate">
                                    @product.ShortDescription
                                </p>
                                
                                <div class="mt-auto">
                                    <div class="mb-3">
                                        @if (product.Discount > 0)
                                        {
                                            <div class="d-flex align-items-center">
                                                <span class="h5 text-primary fw-bold mb-0 me-2">
                                                    $@((product.Price * (1 - product.Discount / 100)).ToString("0.00"))
                                                </span>
                                                <small class="text-muted text-decoration-line-through">
                                                    $@product.Price.ToString("0.00")
                                                </small>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="h5 text-primary fw-bold mb-0">$@product.Price.ToString("0.00")</span>
                                        }
                                    </div>
                                    
                                    <a asp-action="ProductDetail" asp-route-id="@product.ProductID" 
                                       class="btn btn-primary w-100 rounded-pill fw-semibold">
                                        View Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    }
</div>