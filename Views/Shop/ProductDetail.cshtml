@model Gadget_Basket.Models.Product

@{
    ViewBag.Title = "Product Detail";
    Layout = "_Layout";
    int cartQty = ViewBag.CartQuantity != null ? (int)ViewBag.CartQuantity : 0;
}

<div class="bg-light py-4">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a asp-action="Index" class="text-decoration-none">Shop</a>
                </li>
                <li class="breadcrumb-item">
                    <a asp-action="ProductList" asp-route-categoryName="@Model.Category?.CategoryName" class="text-decoration-none">
                        @Model.Category?.CategoryName
                    </a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">@Model.ProductName</li>
            </ol>
        </nav>
    </div>
</div>

<div class="container my-5">
    <div class="row g-5">
        <div class="col-lg-6">
            <div class="position-relative">
                @if (Model.Discount > 0)
                {
                    <span class="position-absolute top-0 start-0 badge bg-danger fs-6 m-3" style="z-index: 10;">
                        @Model.Discount.ToString("0")% OFF
                    </span>
                }
                <div class="card border-0 shadow-sm overflow-hidden">
                    <img src="@Model.ImageURL" 
                         class="card-img w-100" 
                         alt="@Model.ProductName" 
                         style="height: 500px; object-fit: cover;" />
                </div>
            </div>
        </div>
        
        <div class="col-lg-6">
            <div class="h-100 d-flex flex-column">
                <div class="mb-3">
                    <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill fw-semibold">
                        @Model.Category?.CategoryName
                    </span>
                </div>
                
                <h1 class="display-6 fw-bold text-dark mb-3">@Model.ProductName</h1>
                
                <div class="mb-4">
                    <p class="text-muted lead">@Model.LongDescription</p>
                </div>

                <div class="mb-4">
                    @if (Model.Discount > 0)
                    {
                        <div class="d-flex align-items-center mb-2">
                            <span class="display-5 fw-bold text-primary me-3">
                                $@((Model.Price * (1 - Model.Discount / 100)).ToString("0.00"))
                            </span>
                            <span class="h4 text-muted text-decoration-line-through mb-0">
                                $@Model.Price.ToString("0.00")
                            </span>
                        </div>
                        <p class="text-success fw-semibold mb-0">
                            You save $@((Model.Price * Model.Discount / 100).ToString("0.00"))
                        </p>
                    }
                    else
                    {
                        <span class="display-5 fw-bold text-primary">$@Model.Price.ToString("0.00")</span>
                    }
                </div>

                <div class="mb-4">
                    @if (cartQty == 0)
                    {
                        <form asp-controller="Shop" asp-action="AddToCart" method="post">
                            <input type="hidden" name="productId" value="@Model.ProductID" />
                            <button type="submit" class="btn btn-primary btn-lg px-5 rounded-pill fw-semibold">
                                Add to Cart
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="card border-0 bg-light p-4 mb-3">
                            <div class="d-flex align-items-center justify-content-between">
                                <span class="fw-semibold text-muted">Quantity in Cart:</span>
                                <div class="d-flex align-items-center">
                                    <form asp-controller="Shop" asp-action="UpdateCart" method="post" class="me-2">
                                        <input type="hidden" name="productId" value="@Model.ProductID" />
                                        <input type="hidden" name="actionType" value="decrement" />
                                        <button type="submit" class="btn btn-outline-secondary" style="width: 40px; height: 40px;">
                                            -
                                        </button>
                                    </form>

                                    <span class="mx-3 fs-4 fw-bold text-primary">@cartQty</span>

                                    <form asp-controller="Shop" asp-action="UpdateCart" method="post" class="ms-2">
                                        <input type="hidden" name="productId" value="@Model.ProductID" />
                                        <input type="hidden" name="actionType" value="increment" />
                                        <button type="submit" class="btn btn-outline-secondary @(cartQty >= 5 ? "disabled" : "")" 
                                                style="width: 40px; height: 40px;" @(cartQty >= 5 ? "disabled" : "")>
                                            +
                                        </button>
                                    </form>
                                </div>
                            </div>
                            @if (cartQty >= 5)
                            {
                                <small class="text-muted mt-2">Maximum quantity reached</small>
                            }
                        </div>
                    }
                </div>

                @if (TempData["CartError"] != null)
                {
                    <div class="alert alert-warning border-0 shadow-sm mb-4">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        @TempData["CartError"]
                    </div>
                }

                <div class="mt-auto pt-4">
                    <div class="d-flex gap-3">
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                            <i class="fas fa-arrow-left me-2"></i>Back to Shop
                        </a>
                        <a asp-action="ProductList" asp-route-categoryName="@Model.Category?.CategoryName" 
                           class="btn btn-outline-primary rounded-pill px-4">
                            More in @Model.Category?.CategoryName
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row my-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-4">
                    <h4 class="fw-bold mb-0">Product Details</h4>
                </div>
                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="d-flex justify-content-between py-2 border-bottom">
                                <span class="text-muted">Price:</span>
                                <span class="fw-semibold">$@Model.Price.ToString("0.00")</span>
                            </div>
                            @if (Model.Discount > 0)
                            {
                                <div class="d-flex justify-content-between py-2 border-bottom">
                                    <span class="text-muted">Discount:</span>
                                    <span class="fw-semibold text-success">@Model.Discount.ToString("0")%</span>
                                </div>
                            }
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex justify-content-between py-2 border-bottom">
                                <span class="text-muted">Category:</span>
                                <span class="fw-semibold">@Model.Category?.CategoryName</span>
                            </div>
                            <div class="d-flex justify-content-between py-2 border-bottom">
                                <span class="text-muted">Availability:</span>
                                <span class="fw-semibold text-success">In Stock</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>