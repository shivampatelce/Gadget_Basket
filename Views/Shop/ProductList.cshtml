@model List<Gadget_Basket.Models.Product>

@{
    ViewBag.Title = "Product List";
    Layout = "_Layout";
}

<div class="bg-light py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="text-center mb-4">
                    <h1 class="display-5 fw-bold text-dark mb-3">
                        @if (ViewBag.SearchQuery != null)
                        {
                            <text>Search Results for "@ViewBag.SearchQuery"</text>
                        }
                        else if (ViewBag.CategoryName != null)
                        {
                            <text>@ViewBag.CategoryName Products</text>
                        }
                        else
                        {
                            <text>All Products</text>
                        }
                    </h1>
                    <p class="lead text-muted">Browse our extensive collection</p>
                </div>
                
                <form asp-action="ProductList" method="get" class="mb-4">
                    <div class="input-group input-group-lg shadow-sm">
                        <input type="text" name="query" value="@ViewBag.SearchQuery" class="form-control ps-4" 
                               placeholder="Search for products..." />
                        <button type="submit" class="btn btn-primary px-4">
                            Search
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h5 class="card-title fw-semibold mb-3">Filter & Sort</h5>
                    <form asp-action="ProductList" method="get">
                        <div class="row g-3 align-items-end">
                            <div class="col-lg-4 col-md-6">
                                <label class="form-label text-muted small fw-semibold">Category</label>
                                <select class="form-select" name="categoryName">
                                    <option value="">All Categories</option>
                                    @foreach (var category in ViewBag.Categories as List<Gadget_Basket.Models.Category>)
                                    {
                                        if (ViewBag.CategoryName == category.CategoryName)
                                        {
                                            <option value="@category.CategoryName" selected>@category.CategoryName</option>
                                        }
                                        else
                                        {
                                            <option value="@category.CategoryName">@category.CategoryName</option>
                                        }
                                    }
                                </select>
                            </div>

                            <div class="col-lg-4 col-md-6">
                                <label class="form-label text-muted small fw-semibold">Sort By</label>
                                <select class="form-select" name="sort">
                                    @{
                                        var sort = ViewBag.Sort as string;
                                    }

                                    @if (sort == "price_asc")
                                    {
                                        <option value="price_asc" selected>Price: Low to High</option>
                                    }
                                    else
                                    {
                                        <option value="price_asc">Price: Low to High</option>
                                    }

                                    @if (sort == "price_desc")
                                    {
                                        <option value="price_desc" selected>Price: High to Low</option>
                                    }
                                    else
                                    {
                                        <option value="price_desc">Price: High to Low</option>
                                    }

                                    @if (sort == "discount")
                                    {
                                        <option value="discount" selected>Discounted Only</option>
                                    }
                                    else
                                    {
                                        <option value="discount">Discounted Only</option>
                                    }
                                </select>
                            </div>

                            <div class="col-lg-4">
                                <button type="submit" class="btn btn-primary w-100 rounded-pill fw-semibold">
                                    Apply Filters
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Count == 0)
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-search fa-3x text-muted mb-3"></i>
            </div>
            <h4 class="text-muted">No products found</h4>
            <p class="text-muted">Try adjusting your search criteria or browse all categories.</p>
            <a asp-action="ProductList" class="btn btn-primary rounded-pill px-4">Browse All Products</a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var product in Model)
            {
                <div class="col-lg-6 col-xl-4">
                    <div class="card border-0 shadow-sm h-100 position-relative">
                        @if (product.Discount > 0)
                        {
                            <span class="position-absolute top-0 start-0 badge bg-danger m-3" style="z-index: 10;">
                                @product.Discount.ToString("0")% OFF
                            </span>
                        }
                        
                        <div class="row g-0 h-100">
                            <div class="col-md-5">
                                <div class="overflow-hidden h-100">
                                    <img src="@product.ImageURL" 
                                         class="img-fluid w-100 h-100" 
                                         alt="@product.ProductName"
                                         style="object-fit: cover; min-height: 200px;" />
                                </div>
                            </div>
                            <div class="col-md-7">
                                <div class="card-body d-flex flex-column h-100 p-4">
                                    <h5 class="card-title fw-bold text-dark mb-2">@product.ProductName</h5>
                                    <p class="card-text text-muted small mb-3">@product.ShortDescription</p>
                                    
                                    <div class="mt-auto">
                                        @if (product.Discount > 0)
                                        {
                                            <div class="mb-3">
                                                <span class="h5 text-primary fw-bold mb-0 me-2">
                                                    $@((product.Price * (1 - product.Discount / 100)).ToString("0.00"))
                                                </span>
                                                <small class="text-muted text-decoration-line-through">
                                                    $@product.Price.ToString("0.00")
                                                </small>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="mb-3">
                                                <span class="h5 text-primary fw-bold mb-0">$@product.Price.ToString("0.00")</span>
                                            </div>
                                        }
                                        
                                        <a asp-action="ProductDetail" asp-route-id="@product.ProductID"
                                           class="btn btn-primary w-100 rounded-pill fw-semibold">
                                            View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>