@model List<Gadget_Basket.Models.CartItem>

@{
    ViewBag.Title = "Cart";
    Layout = "_Layout";
    decimal subtotal = Model.Sum(item => item.Product.Price * item.Quantity);
    decimal taxRate = 0.13M;
    decimal tax = subtotal * taxRate;
    decimal total = subtotal + tax;
}

<div class="bg-light py-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="display-6 fw-bold text-dark mb-0">Shopping Cart</h1>
                <p class="text-muted mb-0">@Model.Count() item@(Model.Count() != 1 ? "s" : "") in your cart</p>
            </div>
            <div class="col-auto">
                <a asp-action="Index" class="btn btn-outline-primary rounded-pill px-4">
                    <i class="fas fa-arrow-left me-2"></i>Continue Shopping
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="fas fa-shopping-cart fa-4x text-muted mb-3"></i>
            </div>
            <h3 class="text-muted mb-3">Your cart is empty</h3>
            <p class="text-muted mb-4">Looks like you haven't added any items to your cart yet.</p>
            <a asp-action="Index" class="btn btn-primary btn-lg rounded-pill px-5">
                Start Shopping
            </a>
        </div>
    }
    else
    {
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-0 py-4">
                        <h4 class="fw-semibold mb-0">Cart Items</h4>
                    </div>
                    <div class="card-body p-0">
                        @foreach (var item in Model)
                        {
                            <div class="border-bottom p-4">
                                <div class="row align-items-center g-3">
                                    <div class="col-md-2">
                                        <img src="@item.Product.ImageURL" 
                                             class="img-fluid rounded" 
                                             alt="@item.Product.ProductName"
                                             style="height: 80px; width: 80px; object-fit: cover;" />
                                    </div>
                                    
                                    <div class="col-md-4">
                                        <h6 class="fw-semibold text-dark mb-1">@item.Product.ProductName</h6>
                                        <p class="text-muted small mb-0">@item.Product.Category?.CategoryName</p>
                                    </div>
                                    
                                    <div class="col-md-2 text-center">
                                        <span class="fw-semibold">$@item.Product.Price.ToString("0.00")</span>
                                    </div>
                                    
                                    <div class="col-md-2">
                                        <div class="d-flex align-items-center justify-content-center">
                                            <form asp-controller="Shop" asp-action="Update" method="post" class="me-1">
                                                <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                                <input type="hidden" name="actionType" value="decrement" />
                                                <button type="submit" class="btn btn-outline-secondary btn-sm @(item.Quantity <= 1 ? "disabled" : "")" 
                                                        style="width: 32px; height: 32px;" @(item.Quantity <= 1 ? "disabled" : "")>
                                                    -
                                                </button>
                                            </form>
                                            
                                            <span class="mx-3 fw-bold">@item.Quantity</span>

                                            <form asp-controller="Shop" asp-action="Update" method="post" class="ms-1">
                                                <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                                <input type="hidden" name="actionType" value="increment" />
                                                <button type="submit" class="btn btn-outline-secondary btn-sm @(item.Quantity >= 5 ? "disabled" : "")" 
                                                        style="width: 32px; height: 32px;" @(item.Quantity >= 5 ? "disabled" : "")>
                                                    +
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-1 text-center">
                                        <span class="fw-bold text-primary">$@((item.Quantity * item.Product.Price).ToString("0.00"))</span>
                                    </div>
                                    
                                    <div class="col-md-1 text-center">
                                        <form asp-controller="Shop" asp-action="Remove" method="post">
                                            <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                                Delete
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="position-sticky" style="top: 2rem;">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-primary text-white py-4">
                            <h4 class="fw-semibold mb-0">Order Summary</h4>
                        </div>
                        <div class="card-body p-4 mb-5">
                            <div class="d-flex justify-content-between py-2 border-bottom">
                                <span class="text-muted">Subtotal (@Model.Count() items)</span>
                                <span class="fw-semibold">$@subtotal.ToString("0.00")</span>
                            </div>
                            <div class="d-flex justify-content-between py-2 border-bottom">
                                <span class="text-muted">Tax (13%)</span>
                                <span class="fw-semibold">$@tax.ToString("0.00")</span>
                            </div>
                            <div class="d-flex justify-content-between py-3 border-bottom mb-3">
                                <span class="h5 fw-bold mb-0">Total</span>
                                <span class="h5 fw-bold text-primary mb-0">$@total.ToString("0.00")</span>
                            </div>
                            
                            <a href="@Url.Action("Index", "Checkout")" class="btn btn-success btn-lg w-100 rounded-pill fw-semibold mb-3">
                                <i class="fas fa-lock me-2"></i>Proceed to Checkout
                            </a>
                            
                            <div class="text-center">
                                <small class="text-muted">
                                    <i class="fas fa-shield-alt me-1"></i>
                                    Secure checkout powered by SSL encryption
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>