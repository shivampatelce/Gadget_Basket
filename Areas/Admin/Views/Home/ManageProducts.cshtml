@model Gadget_Basket.Models.Product

@{
    ViewBag.Title = "Manage Products";
    Layout = "_Layout";
}

<div class="bg-light py-4">
    <div class="container">
        <div class="row align-items-center">
            <div class="col">
                <h1 class="display-6 fw-bold text-dark mb-0">Product Management</h1>
                <p class="text-muted mb-0">Add, view, and manage your product inventory</p>
            </div>
            <div class="col-auto">
                <span class="badge bg-primary rounded-pill px-3 py-2">
                    Admin Panel
                </span>
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="row g-4">
                <div class="col-lg-5">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-success text-white py-4">
                            <h4 class="fw-semibold mb-0">
                                Add New Product
                            </h4>
                            <small class="opacity-75">Create a new product listing</small>
                        </div>
                        <div class="card-body p-4">
                            <form asp-action="ManageProducts" method="post" novalidate>
                                <div class="mb-3">
                                    <label asp-for="ProductName" class="form-label fw-semibold">Product Name</label>
                                    <input asp-for="ProductName" class="form-control form-control-lg" 
                                           placeholder="Enter product name" />
                                    <span asp-validation-for="ProductName" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="ShortDescription" class="form-label fw-semibold">Short Description</label>
                                    <textarea asp-for="ShortDescription" class="form-control" rows="2" 
                                              placeholder="Brief product description..."></textarea>
                                    <span asp-validation-for="ShortDescription" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="LongDescription" class="form-label fw-semibold">Long Description</label>
                                    <textarea asp-for="LongDescription" class="form-control" rows="3" 
                                              placeholder="Detailed product description..."></textarea>
                                    <span asp-validation-for="LongDescription" class="text-danger small"></span>
                                </div>

                                <div class="row g-3 mb-3">
                                    <div class="col-md-6">
                                        <label asp-for="Price" class="form-label fw-semibold">Price ($)</label>
                                        <input asp-for="Price" class="form-control" type="number" step="0.01" 
                                               placeholder="0.00" />
                                        <span asp-validation-for="Price" class="text-danger small"></span>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Discount" class="form-label fw-semibold">Discount (%)</label>
                                        <input asp-for="Discount" class="form-control" type="number" step="0.01" 
                                               placeholder="0.00" />
                                        <span asp-validation-for="Discount" class="text-danger small"></span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="CategoryID" class="form-label fw-semibold">Category</label>
                                    <select asp-for="CategoryID" class="form-select form-select-lg" 
                                            asp-items="@(new SelectList(ViewBag.CategoryList, "CategoryId", "CategoryName"))">
                                        <option value="">Select Category</option>
                                    </select>
                                    <span asp-validation-for="CategoryID" class="text-danger small"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="ImageURL" class="form-label fw-semibold">Image URL</label>
                                    <input asp-for="ImageURL" class="form-control form-control-lg" 
                                           placeholder="https://example.com/image.jpg" />
                                    <span asp-validation-for="ImageURL" class="text-danger small"></span>
                                </div>

                                <button type="submit" class="btn btn-success btn-lg w-100 rounded-pill fw-semibold">
                                    Add Product
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-lg-7">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-white border-0 py-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h4 class="fw-semibold mb-1">Existing Products</h4>
                                    <small class="text-muted">Manage your current product inventory</small>
                                </div>
                            </div>
                        </div>
                        <div class="card-body p-0" style="max-height: 600px; overflow-y: auto;">
                            @if (ViewBag.Products != null && ((List<Product>)ViewBag.Products).Count > 0)
                            {
                                @foreach (var product in ViewBag.Products)
                                {
                                    <div class="border-bottom p-4">
                                        <div class="row align-items-center g-3">
                                            <div class="col-md-2">
                                                <img src="@product.ImageURL" 
                                                     class="img-fluid rounded" 
                                                     alt="@product.ProductName"
                                                     style="height: 60px; width: 60px; object-fit: cover;" />
                                            </div>
                                            
                                            <div class="col-md-4">
                                                <h6 class="fw-semibold text-dark mb-1">@product.ProductName</h6>
                                                <small class="text-muted">@product.Category?.CategoryName</small>
                                            </div>
                                            
                                            <div class="col-md-2 text-center">
                                                <div class="fw-semibold text-primary">$@product.Price.ToString("0.00")</div>
                                                @if (product.Discount > 0)
                                                {
                                                    <small class="text-success">@product.Discount.ToString("0")% OFF</small>
                                                }
                                            </div>
                                            
                                            <div class="col-md-2 text-center">
                                                @if (product.Discount > 0)
                                                {
                                                    <span class="badge bg-success rounded-pill">
                                                        Sale
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-light text-dark rounded-pill">
                                                        Regular
                                                    </span>
                                                }
                                            </div>
                                            
                                            <div class="col-md-2 text-center">
                                                <form asp-action="DeleteProduct" asp-route-productId="@product.ProductID" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-outline-danger btn-sm rounded-pill px-3">
                                                        Delete
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <h5 class="text-muted mb-2">No products found</h5>
                                    <p class="text-muted small mb-0">Add your first product to get started</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <div class="row my-5">
                <div class="col-12">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body p-4">
                            <div class="row g-4 text-center">
                                <div class="col-md-3">
                                    <div class="d-flex align-items-center justify-content-center mb-2">
                                        <h6 class="fw-semibold mb-0">Images</h6>
                                    </div>
                                    <small class="text-muted">Use high-quality product images</small>
                                </div>
                                
                                <div class="col-md-3">
                                    <div class="d-flex align-items-center justify-content-center mb-2">
                                        <h6 class="fw-semibold mb-0">Pricing</h6>
                                    </div>
                                    <small class="text-muted">Set competitive and fair prices</small>
                                </div>
                                
                                <div class="col-md-3">
                                    <div class="d-flex align-items-center justify-content-center mb-2">
                                        <h6 class="fw-semibold mb-0">Descriptions</h6>
                                    </div>
                                    <small class="text-muted">Write clear and detailed descriptions</small>
                                </div>
                                
                                <div class="col-md-3">
                                    <div class="d-flex align-items-center justify-content-center mb-2">
                                        <h6 class="fw-semibold mb-0">Warning</h6>
                                    </div>
                                    <small class="text-muted">Deleting products cannot be undone</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>